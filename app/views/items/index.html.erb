<div class="container">
  <h1 class='mt-3'>My Budget Planner</h1>
  <div class="row">
    <h3 class="mt-3">You are watching Wallet <%= Wallet.find(1).id %></h3>
  </div>
  <div class="row mt-3">
    <div class="col-sm">
      <div class="alert alert-secondary"><span>Budget: ¥ <%= Wallet.find(1).budget %></span></div>
      <h3 class="mt-3">Add Budget</h3>
      <%= link_to "+ New budget", new_wallet_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-sm">
      <div class="alert alert-success"><span>Remaining: ¥ </span></div>
    </div>
    <div class="col-sm">
      <div class="alert alert-primary"><span>Spent so far: ¥ <%#= user.spent_total %> </span></div>
    </div>
  </div>

  <h3 class="mt-3">Expenses</h3>
  <%= render "shared/expenses", item: @item %>
</div>
