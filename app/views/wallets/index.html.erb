<div class="container">
  <h1>Choose Wallet</h1>
  <div>

    <% @wallets.each do |wallet| %>
      <h3 class="btn btn-warning m-3 p-2">
        <%= link_to "Wallet #{wallet.id}", wallet_path(wallet), class: 'text-secondary'%>
      </h3>
    <% end %>

  </div>
  <%= link_to "Add another Wallet", new_wallet_path, class: 'btn btn-primary' %>
</div>
